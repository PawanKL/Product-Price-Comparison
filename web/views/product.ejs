        <li><a href="#!">one</a></li>
        <li><a href="#!">two</a></li>
        <li class="divider"></li>
        <li><a href="#!">three</a></li>
    </ul>
    <nav class="#1e88e5 blue darken-1">
        <div class="nav-wrapper">
            <a href="/" class="brand-logo">Bazar.Pk</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <!-- <ul class="left hide-on-med-and-down">
                
            </ul> -->
            <ul class="right hide-on-med-and-down">
                <li><a href="/catefoires">Categories</a></li>
                <li><a href="#">About Us</a></li>
                <li><a href="#">Contact Us</a></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-trigger1" href="#!" data-target="dropdown1">Cart<i
                            class="material-icons right">local_grocery_store</i></a></li>
            </ul>
        </div>
    </nav>
    <ul class="sidenav" id="mobile-demo">
            <li><a href="#">Categories</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Contact Us</a></li>
            <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Cart<i
                        class="material-icons right">local_grocery_store</i></a></li>
    </ul>
    <div class="container" id="product_id">
        <div class="row" id="card_row">
            <div class="col s6 offset-s3 valign">
                <div class="card" id="product_card">
                    <div class="card-image">
                        <img src='<%=product["ProductImage"]%>'
                            onerror="this.onerror=null;this.src='../../static/images/sample.jpg';" id="product_card_img">
                        <span class="card-title #000000 black"><%=product["Site"]%></span>
                    </div>
                    <div class="card-content">
                        <% if(product["Price"] != -1) { %>
                        <span class="card-title">PKR. <%=product["Price"]%></span>
                        <%} else{%>
                        <span class="card-title">Call For Price</span>
                        <%}%>
                                <p><%=product['ProductName']%></p>
                    </div>
                    <div class="card-action">
                        <button class="btn-small waves-effect waves-light" value='<%=product["ProductPage"]%>'
                            onclick="gotoStore(this)">Goto Store</button>
                        <button class="btn-small waves-effect waves-light #e53935 red darken-1" value='<%=product["_id"]%>'
                            onclick="addToCart(this)">Add To Cart<i
                                class="material-icons right">local_grocery_store</i></button>
                    </div>
                </div>
            <!-- </div> -->
        <!-- </div> -->
    </div>
    <script src="../../static/js/jquery-3.4.1.min.js"></script>
    <script src="../../static/js/materialize.min.js"></script>
    <script>
            $(".dropdown-trigger1").dropdown();
            $(document).ready(function () {
                $('.sidenav').sidenav();
            });
            function gotoStore(e) {
                console.log(e.value)
                var url = e.value
                var win = window.open(url, '_blank');
                win.focus();
